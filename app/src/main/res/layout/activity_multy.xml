<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_multy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.demento.briskula.ServerActivity" android:background="#1d661d"
        android:baselineAligned="false" android:orientation="vertical">
    <LinearLayout
            android:id="@+id/firstServerLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:layout_weight="1">
            <ImageButton
                    android:layout_height="100dp" app:srcCompat="@drawable/back" android:id="@+id/oponentServerCard1"
                    android:layout_weight="1" android:scaleType="fitXY" android:background="#1d661d"
                    tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="0dp"
                    android:clickable="false" android:layout_width="60dp"/>
            <ImageButton
                    android:layout_height="100dp" app:srcCompat="@drawable/back" android:id="@+id/oponentServerCard2"
                    android:layout_weight="1" android:scaleType="fitXY" android:background="#1d661d"
                    tools:layout_editor_absoluteX="140dp"
                    tools:layout_editor_absoluteY="0dp" android:clickable="false" android:layout_width="60dp"/>
            <ImageButton
                    android:layout_height="100dp" app:srcCompat="@drawable/back" android:id="@+id/oponentServerCard3"
                    android:layout_weight="1" android:scaleType="fitXY" android:background="#1d661d"
                    app:layout_constraintRight_toLeftOf="@+id/computerCard2"
                    app:layout_constraintLeft_toRightOf="@+id/computerCard1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0.02" android:clickable="false" android:layout_width="60dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:layout_weight="1">
                <FrameLayout
                        android:layout_width="110dp"
                        android:layout_height="match_parent" android:layout_weight="1">

                    <ImageButton
                            android:id="@+id/briskulaServerCard"
                            android:layout_weight="1" android:scaleType="fitXY" android:background="#1d661d"
                            android:padding="10dp"
                            android:clickable="false"
                            android:layout_height="match_parent" app:srcCompat="@drawable/b10"
                            android:layout_width="90dp"/>
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" app:srcCompat="@drawable/back_rotated"
                            android:id="@+id/backRotatedCard1" android:layout_weight="1"/>
                </FrameLayout>
            </LinearLayout>
            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="16.00"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:layout_weight="1"
            >
                <ImageButton
                        android:layout_height="match_parent" android:id="@+id/gameServerCard2"
                        android:layout_weight="1" android:scaleType="fitXY" android:background="#1d661d"
                        android:visibility="visible"
                        app:layout_constraintRight_toRightOf="parent" tools:layout_editor_absoluteY="0dp"
                        android:paddingBottom="10dp" android:paddingTop="10dp"
                        android:paddingRight="5dp"
                        android:paddingLeft="10dp" android:layout_width="90dp"/>
                <ImageButton
                        android:id="@+id/gameServerCard1"
                        android:layout_weight="1" android:scaleType="fitXY"
                        android:layout_alignParentTop="true" android:layout_alignLeft="@+id/linearLayout"
                        android:layout_alignStart="@+id/linearLayout"
                        android:visibility="visible"
                        android:layout_height="match_parent"
                        app:layout_constraintRight_toRightOf="parent" app:layout_constraintTop_toTopOf="parent"
                        android:paddingBottom="10dp" android:paddingTop="10dp"
                        android:background="#1d661d"
                        android:paddingLeft="5dp" android:paddingRight="10dp" android:layout_width="90dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/secondServerLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1.72">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="match_parent" tools:layout_editor_absoluteY="48dp"
                    tools:layout_editor_absoluteX="19dp" android:layout_width="wrap_content"
            >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/oponentServerScore" android:layout_weight="1"
                        android:gravity="center" android:textColor="@android:color/holo_orange_light"
                        android:textColorHighlight="@android:color/holo_green_light" android:textSize="18sp"
                        android:textStyle="bold" android:text="120"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/playerServerScore" android:layout_weight="1"
                        android:gravity="center" android:text="120" android:textSize="18sp"
                        android:textStyle="bold" android:textColor="@android:color/holo_orange_light"
                        android:textColorHighlight="@android:color/holo_green_light"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1.72">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="10dp" android:layout_weight="1"
                        android:textColor="@android:color/holo_red_light" android:textSize="30sp"
                        android:layout_gravity="center" android:gravity="right|center" android:id="@+id/chatTxtop"
                        android:padding="10dp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/chatTextme"
                        android:padding="10dp" android:gravity="right|center"
                        android:textColor="@android:color/holo_blue_light" android:textSize="20sp"
                        android:textColorHighlight="@color/colorPrimary"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_height="match_parent"
                android:layout_width="match_parent" android:layout_alignParentBottom="true" android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                tools:layout_editor_absoluteY="6dp" tools:layout_editor_absoluteX="0dp" android:layout_weight="1.72"
                android:gravity="right">
            <Button
                    android:text="Message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="0.2"
                    android:textColor="@android:color/holo_green_light"
                    android:layout_gravity="bottom|center" android:id="@+id/msgBtn" android:onClick="Message"
                    android:padding="10dp"
                    style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"/>
            <ImageButton
                    android:layout_height="match_parent" android:id="@+id/playerServerCard1"
                    android:onClick="clickedPlayerServerCard1"
                    android:layout_weight="1" android:scaleType="fitXY" android:background="#1d661d"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:visibility="visible" android:paddingLeft="10dp"
                    app:srcCompat="@drawable/b2" android:layout_width="15dp"/>
            <ImageButton
                    android:layout_height="match_parent" android:id="@+id/playerServerCard2"
                    android:onClick="clickedPlayerServerCard2"
                    android:layout_weight="1" android:scaleType="fitXY" android:background="#1d661d"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" android:visibility="visible"
                    android:paddingLeft="5dp" android:paddingRight="5dp" app:srcCompat="@drawable/b7"
                    android:layout_width="15dp"/>
            <ImageButton
                    android:layout_height="match_parent" android:id="@+id/playerServerCard3"
                    android:onClick="clickedPlayerServerCard3"
                    android:layout_weight="1" android:scaleType="fitXY" android:background="#1d661d"
                    android:paddingBottom="10dp" android:paddingTop="10dp"
                    android:visibility="visible" android:paddingRight="10dp"
                    app:srcCompat="@drawable/c1" android:layout_width="15dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
